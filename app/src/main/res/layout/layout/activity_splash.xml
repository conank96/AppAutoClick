<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.motion.widget.MotionLayout
        android:id="@+id/motion_layout"
        paddingBottomSystemWindowInsets="@{true}"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/splash_background"
        app:layoutDescription="@xml/activity_splash_scene">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/icon_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@mipmap/ic_launcher" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/content_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/bold"
            android:gravity="center"
            android:text="@string/app_name"
            android:textColor="@color/content_splash_color"
            android:textSize="@dimen/splash_size_text_content" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/copyright"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/bold"
            android:text="Â© Copyright by TaPiGroup"
            android:textColor="@color/content_splash_color"
            android:textSize="14dp" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/ship_button"
            android:layout_width="120dp"
            android:layout_height="48dp"
            android:background="@drawable/splash_skip_selector"
            android:fontFamily="@font/medium"
            android:gravity="center"
            android:text="@string/skip"
            android:textColor="#fff"
            android:textSize="16dp" />

        <FrameLayout
            android:id="@+id/native_container"
            paddingTopSystemWindowInsets="@{true}"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="#1a1a1a" />

    </androidx.constraintlayout.motion.widget.MotionLayout>
</layout>
